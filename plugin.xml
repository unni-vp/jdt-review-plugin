<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.unni-vp.jdt-static-analysis.commands.JDTReviewCategory"
            name="JDT Review">
      </category>
      <command
            categoryId="org.unni-vp.jdt-static-analysis.commands.JDTReviewCategory"
            name="Source Code Stats"
            id="org.unni-vp.jdt-static-analysis.commands.SourceCountCommand">
      </command>
      <command
            categoryId="org.unni-vp.jdt-static-analysis.commands.JDTReviewCategory"
            name="Suppress Warning Stats"
            id="org.unni-vp.jdt-static-analysis.commands.SuppressWarningAnnotationCommand">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.unnivp.jdtstaticanalysis.handlers.SourceCodeCountHandler"
            commandId="org.unni-vp.jdt-static-analysis.commands.SourceCountCommand">
      </handler>
      <handler
            class="org.unnivp.jdtstaticanalysis.handlers.SuppressWarningAnnotationHandler"
            commandId="org.unni-vp.jdt-static-analysis.commands.SuppressWarningAnnotationCommand">
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.unni-vp.jdt-static-analysis.commands.JDTReviewBindingCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.unni-vp.jdt-static-analysis.menus.JDTReviewMenu"
               label="JDT Review"
               mnemonic="M">
            <command
                  commandId="org.unni-vp.jdt-static-analysis.commands.SourceCountCommand"
                  id="org.unni-vp.jdt-static-analysis.menus.SourceCountMenuCommand"
                  mnemonic="C">
            </command>
            <command
                  commandId="org.unni-vp.jdt-static-analysis.commands.SuppressWarningAnnotationCommand"
                  id="org.unni-vp.jdt-static-analysis.menus.SuppressWarningAnnotationMenuCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.unni-vp.jdt-static-analysis.toolbars.JDTReviewToolbar">
            <command
                  id="org.unni-vp.jdt-static-analysis.toolbars.SourceCountToolbarCommand"
                  commandId="org.unni-vp.jdt-static-analysis.commands.SourceCountCommand"
                  icon="icons/source_code.png"
                  tooltip="Source Code Stats">
            </command>
            <command
                  id="org.unni-vp.jdt-static-analysis.toolbars.SuppressWarningAnnotationToolbarCommand"
                  commandId="org.unni-vp.jdt-static-analysis.commands.SuppressWarningAnnotationCommand"
                  icon="icons/suppress_warning.png"
                  tooltip="Suppress Warning Stats">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
